Eye.config do
  logger "<%= deploy_to %>/log/eye.log"
end

Eye.application("<%= application %>") do |app|

  env "MARTINI_ENV" => "production"
  working_dir '<%= deploy_to %>'

  process :web do
    auto_start false
    pid_file "tmp/pids/web.pid"
    start_command "./#{application}"
    daemonize true
    stdall "log/eye-web.log"
  end
end